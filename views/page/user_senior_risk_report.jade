extends  ../user_senior_show_topic_layout
block scripts
    script(src="/javascripts/risk_today_senior.js")
    script(src="/javascripts/user_senior_risk_report.js")
block content
    br
    .well.well-sm#show_search
        div.form-inline
            .row
                .col-md-12
                    button.close(type='button', aria-label='Close')#close_search
                        span(aria-hidden='true') &times;
            .row
                .col-md-12
                    .form-group
                        label วันที่
                        | &nbsp;&nbsp;&nbsp;&nbsp;
                        #datetimepicker1.input-group(data-datepicker)
                            input#Date_Searchrisk1.form-control(type='text')
                            span.input-group-addon
                                span.glyphicon.glyphicon-calendar
                        | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        label ถึง
                        | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        #datetimepicker2.input-group(data-datepicker)
                            input#Date_Searchrisk2.form-control(type='text')
                            span.input-group-addon
                                span.glyphicon.glyphicon-calendar
                        | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        button#Searchrisk(type="button").btn.btn-primary.btn-sm ค้นหา
            .row
                .col-md-12
                    .form-group
                        label หัวข้อความเสี่ยง
                        | &nbsp;&nbsp;
                        input#txtSearch(type="text",placeholder="Search..").form-control
                        | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        button#btnSearch(type="button").btn.btn-primary.btn-sm ค้นหา
    .panel.panel-primary#show_detail
        .panel-heading
            h3.panel-title
                i.fa.fa-comments-o
                | &nbsp; รายการอุบัติการณ์ความเสี่ยง
        .panel-body
            button.btn.btn-xs.btn-primary.pull-right#btnShowSearch
                i.fa.fa-search.fa-lg
                | &nbsp; ค้นหา
            table.table.table-hover#tblRisk_report
                thead
                    tr
                        td.h4(style="width : 10px") ลำดับ
                        td.h4(style="width : 50px") วันที่
                        td.h4(style="width : 80px") ประเภท
                        td.h4(style="width : 800px") หัวข้อความเสี่ยง
                        td(style="width : 150px")
                            i.fa.fa-cog.fa-spin.fa-3w.fa-fw
                            i.fa.fa-print
                    tbody
            ul.pagination#paging